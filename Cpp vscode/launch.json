{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",  // 与 launch.json 的 preLaunchTask 匹配
            "command": "C:\\MinGW\\bin\\g++.exe",  // 编译器路径正确
            "args": [
                "-fdiagnostics-color=always",
                "-g",  // 生成调试信息（必需）
                "${file}",  // 当前打开的源代码文件
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // 输出可执行文件路径
            ],
            "options": {
                "cwd": "${fileDirname}"  // 工作目录修正为源代码目录
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译器: C:\\MinGW\\bin\\g++.exe"
        }
    ]
}
